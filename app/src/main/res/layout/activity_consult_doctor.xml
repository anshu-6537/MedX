<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConsultDoctor">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="38dp"
        android:layout_marginStart="27sp"
        android:clickable="true"
        android:focusable="true"
        />
    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ubuntu_medium"
        android:textSize="24sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="74dp"
        android:text="@string/consult_a_doctor"
        />
    <TextView
        app:layout_constraintTop_toBottomOf="@id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What do you want to consult doctor for ?"
        android:fontFamily="@font/ubuntu_regular"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text"
        android:layout_marginTop="106dp"
        />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/category_not_listed"
        app:layout_constraintTop_toBottomOf="@id/viewPager"
        android:layout_marginTop="58dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="32dp"
        android:fontFamily="@font/ubuntu_medium"
        android:textColor="@color/black"
        android:textSize="18sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/consult_a_general_practictioner"
        android:fontFamily="@font/ubuntu_medium"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/text2"
        app:layout_constraintLeft_toLeftOf="@id/text2"
        android:layout_marginTop="10dp"
        android:textColor="#0139B4"
        android:clickable="true"
        android:focusable="true"
        />
    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginStart="34sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text2"
        android:textSize="18sp"
        android:textColor="#0139B4"
        android:text="@string/describe_your_complaint"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/complaint_text"
        app:layout_constraintTop_toBottomOf="@id/text3"
        app:layout_constraintLeft_toLeftOf="@id/text3"
        android:layout_marginTop="11dp"
        android:textSize="14sp"
        android:textAlignment="viewStart"
        />
    <EditText
        android:id="@+id/edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minLines="7"
        android:hint="Type your complaint here. Be as detailed as you can."
        app:layout_constraintTop_toBottomOf="@id/text3"
        android:layout_marginTop="64dp"
        android:layout_marginHorizontal="32dp"
        android:background="@drawable/edit_text"
        android:textSize="12sp"
        android:gravity="top"
        android:paddingTop="17sp"
        android:paddingHorizontal="15dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next"
        android:background="@drawable/round_box"
        app:layout_constraintTop_toBottomOf="@id/edit"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="74dp"
        />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>