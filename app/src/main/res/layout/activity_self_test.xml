<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Self_test">
    
    <TextView
        android:id="@+id/text1"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="28dp"
        android:layout_marginStart="18dp"
        android:layout_width="wrap_content"
        android:fontFamily="@font/ubuntu_bold"
        android:layout_height="wrap_content"
        android:text="Symptom 1 :"
        />
    
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text1"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="8dp"
        android:entries="@array/symp1"
        app:layout_constraintLeft_toLeftOf="@id/text1"
        />

    <TextView
        android:id="@+id/text2"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text1"
        android:layout_marginTop="100dp"
        android:layout_marginStart="18dp"
        android:layout_width="wrap_content"
        android:fontFamily="@font/ubuntu_bold"
        android:layout_height="wrap_content"
        android:text="Symptom 2 :"
        />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text2"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="8dp"
        android:entries="@array/symp1"
        app:layout_constraintLeft_toLeftOf="@id/text2"
        />

    <TextView
        android:id="@+id/text3"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text2"
        android:layout_marginTop="100dp"
        android:layout_marginStart="18dp"
        android:layout_width="wrap_content"
        android:fontFamily="@font/ubuntu_bold"
        android:layout_height="wrap_content"
        android:text="Symptom 3 :"
        />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text3"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="8dp"
        android:entries="@array/symp1"
        app:layout_constraintLeft_toLeftOf="@id/text3"
        />


    <TextView
        android:id="@+id/text4"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text3"
        android:layout_marginTop="100dp"
        android:layout_marginStart="18dp"
        android:layout_width="wrap_content"
        android:fontFamily="@font/ubuntu_bold"
        android:layout_height="wrap_content"
        android:text="Symptom 4 :"
        />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text4"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="8dp"
        android:entries="@array/symp1"
        app:layout_constraintLeft_toLeftOf="@id/text4"
        />

    <TextView
        android:id="@+id/text5"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text4"
        android:layout_marginTop="100dp"
        android:layout_marginStart="18dp"
        android:layout_width="wrap_content"
        android:fontFamily="@font/ubuntu_bold"
        android:layout_height="wrap_content"
        android:text="Symptom 5 :"
        />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text5"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="8dp"
        android:entries="@array/symp1"
        app:layout_constraintLeft_toLeftOf="@id/text5"
        />

</androidx.constraintlayout.widget.ConstraintLayout>