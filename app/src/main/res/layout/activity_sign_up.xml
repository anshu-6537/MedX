<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp">

    <ImageButton
        android:id="@+id/back"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="54dp"
        android:layout_marginStart="25dp"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="wrap_content"
        android:src="@drawable/back"
        android:backgroundTint="@color/white"
        />
    <TextView
        android:id="@+id/text1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="54dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set up your profile"
        />
    <TextView
        android:id="@+id/text2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tell us little about yourself"
        app:layout_constraintTop_toBottomOf="@id/text1"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="40dp"
        app:layout_constraintRight_toRightOf="parent"
        >
        <TextView
            android:id="@+id/name"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name"
            />
        <LinearLayout
            android:id="@+id/linearname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/name"
            android:layout_marginTop="2dp"
            >
            <EditText
                android:id="@+id/entername"
                app:layout_constraintTop_toBottomOf="@id/name"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter your name"
                android:layout_weight="9"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/profile"
                android:layout_marginTop="28dp"
                android:layout_weight="1"
                app:layout_constraintLeft_toRightOf="@id/entername"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/mail"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:text="Email"
            app:layout_constraintTop_toBottomOf="@id/linearname"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <LinearLayout
            android:id="@+id/linearmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/mail"
            android:layout_marginTop="2dp"
            >
            <EditText
                android:id="@+id/entermail"
                app:layout_constraintTop_toBottomOf="@id/mail"
                android:layout_marginTop="10dp"
                android:hint="Enter Your Email"
                android:layout_weight="9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mail"
                android:layout_marginTop="28dp"
                android:layout_weight="1"
                app:layout_constraintLeft_toRightOf="@id/entermail"
                />
        </LinearLayout>
        <TextView
            app:layout_constraintTop_toBottomOf="@id/linearmail"
            android:layout_marginTop="8dp"
            android:id="@+id/pass"
            android:textSize="14sp"
            android:text="Password"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <LinearLayout
            android:id="@+id/linearpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/pass"
            android:layout_marginTop="2dp"
            >
            <EditText
                android:id="@+id/enterpass"
                app:layout_constraintTop_toBottomOf="@id/pass"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:hint="Enter your password"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/password"
                android:layout_marginTop="28dp"
                android:layout_weight="1"
                app:layout_constraintLeft_toRightOf="@id/enterpass"
                />
        </LinearLayout>
        <TextView
            app:layout_constraintTop_toBottomOf="@id/linearpass"
            android:layout_marginTop="8dp"
            android:id="@+id/cnfrmpass"
            android:textSize="14sp"
            android:text="Confrim Password"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <LinearLayout
            android:id="@+id/linearcnfrmpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/cnfrmpass"
            android:layout_marginTop="10dp"
            >
            <EditText
                android:id="@+id/entercnfrmpass"
                app:layout_constraintTop_toBottomOf="@id/linearcnfrmpass"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:hint="Confirm your password"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/password"
                android:layout_marginTop="28dp"
                android:layout_weight="1"
                app:layout_constraintLeft_toRightOf="@id/enterpass"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/linearcnfrmpass"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <RadioGroup
            android:id="@+id/radioSex"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/linearcnfrmpass"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            >

            <RadioButton
                android:id="@+id/radioMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male" />

            <RadioButton
                android:id="@+id/radioFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:layout_marginStart="40dp"/>

        </RadioGroup>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next"
        android:background="@drawable/round_box"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginHorizontal="25dp"
        app:layout_constraintTop_toBottomOf="@id/constraint"
        android:layout_marginTop="54dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
