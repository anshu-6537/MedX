<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".upload_image">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginStart="25dp"
        />
    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/upload_you_documents"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="85dp"
        android:layout_marginHorizontal="69dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:fontFamily="@font/ubuntu_medium"
        />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/firebaseimg"
            android:layout_width="220dp"
            android:layout_height="220dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="135dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/selimg"
            android:layout_marginBottom="45dp"
            android:src="@drawable/uploadfiles"
            android:layout_marginHorizontal="45dp"
        />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/selimg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_box"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="575dp"
        android:layout_marginHorizontal="45dp"
        android:text="@string/select_image"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:fontFamily="@font/ubuntu_medium"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/upimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="75dp"
        android:background="@drawable/roundbutton"
        app:layout_constraintTop_toBottomOf="@id/selimg"
        android:layout_marginTop="75dp"
        android:layout_marginHorizontal="45dp"
        android:text="@string/upload_image"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:fontFamily="@font/ubuntu_medium"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/nextimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="75dp"
        android:background="@drawable/roundbutton"
        app:layout_constraintTop_toTopOf="@id/upimg"
        android:layout_marginHorizontal="45dp"
        android:text="@string/fetch"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:fontFamily="@font/ubuntu_medium"
        />

</androidx.constraintlayout.widget.ConstraintLayout>